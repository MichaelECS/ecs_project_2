<!-- Handlebars -->
<script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>
<script src="/js/handlebars-templating.js"></script>

<body>
    <div class="container">
        <div class="container-lg">
            <h1>ECS Academy Blog</h1>
            <div id="blog-list">
                {{{body}}}
            </div>
        <div>
    </div>

    <div>
        <form id="form" action="http://localhost:8080/blogs" method="POST">
            <div class="form-group">
                <label for="Title">Title</label>
                <input id="form-title" class="form-control" name="title">
            </div>

            <div class="form-group">
                <label for="Content">Content</label>
                <textarea id="form-content" class="form-control" name="content"></textarea>
            </div>

            <div class="form-group">
                <label for="Author">Author</label>
                <input id="form-author" class="form-control" name="author">
            </div>

            <button id="form-submit" type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>

</html>